@model schedule.data.erps.dictionary.DIC_TINH

@{
    ViewBag.Title = "Tạo mới tỉnh thành";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title m-b-0">Tạo mới tỉnh thành</h3>

            @using (Html.BeginForm("create", "tinhthanh",FormMethod.Post, new { @data_toggle = "validator" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="validation-summary-errors text-danger">
                    <ul>
                        <li style="display:block">@Html.ValidationMessage("error", new { @class = "text-danger" })</li>
                    </ul>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.MaTinh, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.MaTinh, new { @class = "form-control", @data_mask = "", @data_inputmask = @"'mask':'(A|9|_)','repeat': 10, 'greedy': true,'placeholder':'', 'clearMaskOnLostFocus': true" })
                        @Html.ValidationMessageFor(model => model.MaTinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenTinh, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.TenTinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenTinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Cap, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.Cap, new schedule.data.erps.dictionary.DIC_TINH().GetCaps(), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Cap, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.Status, new List<SelectListItem> { new SelectListItem { Value = "1", Text = "Sử dụng" }, new SelectListItem { Value = "0", Text = "Không sử dụng" } }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-info"><i class="fa fa-save m-r-5"></i><span>Lưu</span></button>
                        <a href="@Url.Action("Index","tinhthanh")" class="btn btn-inverse"><i class="fa fa-remove m-r-5"></i><span>Hủy</span></a>
                    </div>
                </div>
            </div>
            }
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>

    </div>

</div>



